@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

@section Styles
{
    <link rel="stylesheet" href="~/css/login.css" />
}
<div id="logreg-forms">
    <form asp-action="Register" method="post" class="form-signup">
        <br />
        <div class="social-login">
            <button class="btn facebook-btn social-btn" type="button"><span><i class="fab fa-facebook-f"></i> Sign up with Facebook</span> </button>
        </div>
        <div class="social-login">
            <button class="btn google-btn social-btn" type="button"><span><i class="fab fa-google-plus-g"></i> Sign up with Google+</span> </button>
        </div>

        <br />
        <p style="text-align:center">OR</p>
        <hr>
        <div asp-validation-summary="All"></div>

        <input asp-action="UserName" type="text" id="user-name" class="form-control" placeholder="Username" autofocus="">
        <input asp-action="FirstName" type="text" id="first-name" class="form-control" placeholder="First name" autofocus="">
        <input asp-action="LastName" type="text" id="last-name" class="form-control" placeholder="Last name" autofocus="">
        <input asp-action="Email" type="email" id="user-email" class="form-control" placeholder="Email address" autofocus="">
        <input asp-action="PhoneNumber" type="tel" id="user-phone" class="form-control" placeholder="Phone" autofocus="">
        <br />
        <input asp-action="Password" type="password" id="user-pass" class="form-control" placeholder="Password"  autofocus="">
        <input asp-action="RepeatedPassword" type="password" id="user-repeatpass" class="form-control" placeholder="Repeat Password"  autofocus="">
        <br />

        <button class="btn btn-primary btn-block" type="submit"><i class="fas fa-user-plus"></i> Sign Up</button>
        <br />
        <br />
        <hr>
        <a asp-action="Login" class="btn btn-success btn-block text-white" type="button" id="btn-signin"><i class="fas fa-sign-in-alt"></i> Sign in to Existing Account</a>
    </form>
</div>