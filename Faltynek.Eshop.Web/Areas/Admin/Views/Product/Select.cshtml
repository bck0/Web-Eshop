@model IList<Product>
@{
    ViewData["Title"] = "Product Items Policy";
}
<h1>@ViewData["Title"]</h1>

<p>Use this page to detail your site's privacy policy.</p>

<a asp-action="Create">Create product Item</a>

@if (Model != null && Model.Count > 0)
{


    <table class="table">
        <thead>
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Image Source</th>
                <th scope="col">Image Alt</th>
                <th scope="col">Edit</th>
                <th scope="col">Delete</th>


            </tr>
        </thead>
        <tbody>
            @{
                for (int i = 0; i < Model.Count; i++)
                {
                    <tr>
                        <th scope="row">@Model[i].ID</th>
                        <td>@Model[i].ImageSource</td>
                        <td>@Model[i].ImageAlt</td>
                        <td><a asp-action="Edit" asp-route-ID="@Model[i].ID">edit</a></td>
                        <td><a asp-action="Delete" asp-route-ID="@Model[i].ID" onclick="return ConfirmDelete();">delete</a></td>

                    </tr>

                }
            }
        </tbody>
    </table>
}
else
{
    <p>Empty</p>
}
@section Scripts
{
    <script src="~/js/alert.js"></script>
}