@using Faltynek.Eshop.Web.Areas.Admin.Controllers
@model Product
@{
    if (String.IsNullOrWhiteSpace(ViewBag.Action) == false)
    {
        <form asp-action="@ViewBag.Action" method="post">
            @{
                if (ViewBag.Action == nameof(ProductController.Edit))
                {
                    <input type="hidden" asp-for="ID" class="form-control" />
                }
            }
            <div class="form-group">
                <label asp-for="ImageSource">Image Source</label>
                <input asp-for="ImageSource" type="text" class="form-control" placeholder="Enter Image Source">
            </div>
            <div class="form-group">
                <label asp-for="ImageAlt">Image Alt</label>
                <input asp-for="ImageAlt" type="text" class="form-control" placeholder="Enter Image Alt">
            </div>
            <button type="submit" class="btn btn-primary">Submit</button>
        </form>
    }
}
